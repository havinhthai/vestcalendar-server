<% layout('../../layout/accountBoilerplate') -%>

<% block('title', 'Change your password') %>
<% block('session-message', 'Enter your new password to change') %>

<form method="post" class="validatePasswordForm">
  <div class="input-group mb-3">
    <input type="password" class="txtPassword form-control" placeholder="Enter new password" name="newPassword" required autofocus>
    <div class="input-group-append">
      <span class="fa fa-lock input-group-text"></span>
    </div>
  </div>

  <div class="input-group mb-3">
    <input type="password" class="txtConfirmPassword form-control" placeholder="Confirm password" name="confirmPassword" required>
    <div class="input-group-append">
      <span class="fa fa-lock input-group-text"></span>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 col-xs-12">
      <button class="btn btn-primary btn-block btn-flat">Change password</button>
    </div>
  </div>
</form>
