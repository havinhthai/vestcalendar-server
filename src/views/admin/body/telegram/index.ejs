<% layout('../../layout/mainBoilerplate') -%>

<% block('title', 'Telegram Management') %>

<% block('titleBar', `
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 text-dark">Telegram Management</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item">
              <a href="/admin">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Telegram Management</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
`) -%>

<% stylesheet('https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/css/select2.min.css')%>
<% script('https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/js/select2.min.js') -%>

<form method="POST">
  <div class="row">
    <div class="col-md-12 col-xs-12">
      <div class="card">
        <div class="card-body">
          <div class="form-group">
            <label class="h4">Send message to users</label>
          </div>

          <div class="form-group">
            <label>Send all:</label>

            <label class="switch small-switch">
              <input id="telegram-send-all" type="checkbox" name="telegram-send-all" checked>
              <span class="slider small-slider round"></span>
            </label>
          </div>

          <div class="form-group">
            <label>To users:</label>
            <select
              disabled
              name="users"
              id="telegram-users"
              multiple="multiple"
              class="form-control select2"
              data-placeholder="Select users"
            >
              <% users.forEach((u) => { %>
                <option value="<%= u.telegramId %>">
                  <%= u.name %>
                </option>
              <% }); %>
            </select>
          </div>

          <div class="form-group">
            <textarea
              rows="3"
              required
              name="message"
              class="form-control"
              placeholder="Message..."
            ></textarea>
          </div>

          <div class="card-footer clearfix">
            <button class="btn btn-primary">Send</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>
