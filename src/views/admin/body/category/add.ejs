<% layout('../../layout/mainBoilerplate') -%>

<% block('title', 'Add Category') %>

<% block('titleBar', `
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 text-dark">Add Category</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item">
              <a href="/admin">Dashboard</a>
            </li>
            <li class="breadcrumb-item">
              <a href="/admin/categories">Categories Management</a>
            </li>
            <li class="breadcrumb-item active">Add category</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
`) -%>

<% stylesheet('https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/css/select2.min.css')%>

<% script('https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/js/select2.min.js') -%>

<form method="POST" id="main_form" class="category-form">
  <div class="row">
    <div class="col-md-12 col-xs-12">
      <div class="card">
        <div class="card-body">
          <div class="form-group">
            <label>Name*</label>
            <input name="name" class="form-control slug-ref" placeholder="Enter category's name" required autofocus>
          </div>

          <div class="form-group">
            <label class="lb-edit">Slug* <i class="fa fa-edit"></i></label>
            <input name="slug" class="form-control mask-slug" placeholder="Enter category's slug" readonly required>
          </div>

          <div class="form-group">
            <label>Description</label>
            <textarea name="description" class="form-control" rows="3" placeholder="Enter category's description"></textarea>
          </div>

          <div class="form-group">
            <label>Is published: </label>
            <label class="switch">
              <input type="checkbox" name="isPublished" value="true">
              <span class="slider round"></span>
            </label>
          </div>
        <div class="card-footer clearfix">
          <button class="btn btn-primary">Save</button>
        </div>
      </div>
    </div>
    </div>
  </div>
</form>
